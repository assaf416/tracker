
<%= simple_form_for(@device_kind) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :device_id %>
    <%= f.input :kind_id %>
    <%= f.input :name %>
    <%= f.input :image_url %>
    <%= f.input :price %>
    <%= f.input :descriptio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
