<%= render "/shared/map_short"%>

<div class='scard'>
  <div class='scard-header d-sm-flex pt-sm-0 pb-0'>
    <h6 class='align-self-sm-center mb-sm-0'> כותרת</h6>
    <div class='ms-sm-auto'>
      <ul
        class='nav nav-tabs nav-tabs-underline card-header-tabs mb-0'
        role='tablist'
      >
        <li class='nav-item' role='presentation'>
          <a
            href='#card-tab1'
            class='nav-link active'
            data-bs-toggle='tab'
            aria-selected='true'
            role='tab'
          >
            <i class='ph-house me-2'></i>
            <%= _t 'Passengers' %>
          </a>
        </li>
        <li class='nav-item' role='presentation'>
          <a
            href='#card-tab2'
            class='nav-link'
            data-bs-toggle='tab'
            aria-selected='false'
            tabindex='-1'
            role='tab'
          >
            <i class='ph-chart-bar me-2'></i>
            <%= _t 'Activities' %>
          </a>
        </li>
        <li class='nav-item' role='presentation'>
          <a
            href='#card-tab3'
            class='nav-link'
            data-bs-toggle='tab'
            aria-selected='false'
            tabindex='-1'
            role='tab'
          >
            <i class='ph-chart-bar me-2'></i>
            <%= _t 'Tickets' %>
          </a>
        </li>
        <li class='nav-item' role='presentation'>
          <a
            href='#card-tab4'
            class='nav-link'
            data-bs-toggle='tab'
            aria-selected='false'
            tabindex='-1'
            role='tab'
          >
            <i class='ph-chart-bar me-2'></i>
            <%= _t 'Devices' %>
          </a>
        </li>
      </ul>
    </div>
  </div>

  <div class='card-body tab-content'>
    <div class='tab-pane fade show active' id='card-tab1' role='tabpanel'>
     <%= render "drivers_short"%>
    </div>

    <div class='tab-pane fade' id='card-tab2' role='tabpanel'>
          <%= render "devices_short"%>
    </div>

    <div class='tab-pane fade' id='card-tab3' role='tabpanel'>
      <%= render "activities_short"%>
    </div>

    <div class='tab-pane fade' id='card-tab4' role='tabpanel'>
      This is the fourth card tab content
    </div>
  </div>
</div>
