<div class="row">
  <div class="col-lg-3">
    <div class='card'>
      <div class='card-header d-sm-flex pt-sm-0 pb-0'>
        <div class='ms-sm-auto'>
          <ul
            class='nav nav-tabs nav-tabs-highlight card-header-tabs mb-0'
            role='tablist'
          >
            <li class='nav-item' role='presentation'>
              <a
                href='#card-tab1'
                class='nav-link active'
                data-bs-toggle='tab'
                aria-selected='true'
                role='tab'
              >
                <i class="fa-solid fa-user-nurse me-1"></i>
                Drivers
              </a>
            </li>
            <li class='nav-item' role='presentation'>
              <a
                href='#card-tab2'
                class='nav-link'
                data-bs-toggle='tab'
                aria-selected='false'
                tabindex='-1'
                role='tab'
              >
               <i class="fa-solid fa-taxi me-1"></i>
                Rides
              </a>
            </li>
            <li class='nav-item' role='presentation'>
              <a
                href='#card-messages'
                class='nav-link'
                data-bs-toggle='tab'
                aria-selected='false'
                tabindex='-1'
                role='tab'
              >
               <i class="fa-solid fa-comments me-1"></i>
                Messages
              </a>
            </li>
            <li class='nav-item' role='presentation'>
              <a
                href='#card-passengers'
                class='nav-link'
                data-bs-toggle='tab'
                aria-selected='false'
                tabindex='-1'
                role='tab'
              >
               <i class="fa-solid fa-users me-1"></i>
                Passengers
              </a>
            </li>
          </ul>
        </div>
      </div>
    
      <div class='card-body tab-content'>
        <div class='tab-pane fade show active' id='card-tab1' role='tabpanel'>
           <%= render "drivers_short"%>
        
        </div>
    
        <div class='tab-pane fade' id='card-tab2' role='tabpanel'>
        <%= render "rides_short"%> 
        </div>
    
        <div class='tab-pane fade' id='card-passengers' role='tabpanel'>
            <%= render "passengers_short"%>
        </div>
        <div class='tab-pane fade' id='card-messages' role='tabpanel'>
            <%= render "messages_short"%>
        </div>
    
        <div class='tab-pane fade' id='card-tab4' role='tabpanel'>
          This is the fourth card tab content
        </div>
      </div>
    </div>
    
  </div>
  <div class="col-lg-9">
    <%= render "map"%>
  </div>
</div>