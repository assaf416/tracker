

<div class="card tile is-child">
    <header class="card-header">
        <p class="card-header-title"><span class="icon"><i class="mdi mdi-account-circle default"></i></span><span>
          Edit
          user
        </span></p><!---->
    </header>
    <div class="card-content">
        <%= form_for (@user) do |f| %>


            <div class="field">
              <label class="label">name</label>
              <div class="control">
                
                  <input class="input" type="text" placeholder="Text input" name="user[name]" >
                
              </div>
              <p class="help"></p>
            </div>

            <div class="field">
              <label class="label">role</label>
              <div class="control">
                
                  <input class="input" type="text" placeholder="Text input" name="user[role]" >
                
              </div>
              <p class="help"></p>
            </div>

            <div class="field">
              <label class="label">email</label>
              <div class="control">
                
                  <input class="input" type="text" placeholder="Text input" name="user[email]" >
                
              </div>
              <p class="help"></p>
            </div>

            <div class="field">
              <label class="label">phone_no</label>
              <div class="control">
                
                  <input class="input" type="date" placeholder="Text input" name="user[phone_no]" >
                
              </div>
              <p class="help"></p>
            </div>

          <div class="form-actions">
            <%= f.button :submit , :class => "button is-small is-primary" %>
            <a href="/users" class="button is-small is-info">Back</a>
          </div>
        <% end %>

    </div>
  </div>


