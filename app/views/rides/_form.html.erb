
<%= simple_form_for(@ride) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :driver_id %>
    <%= f.input :customer_id %>
    <%= f.input :from_location %>
    <%= f.input :from_address %>
    <%= f.input :accpeted_at %>
    <%= f.input :arrived_to_customer_at %>
    <%= f.input :dropped_at %>
    <%= f.input :drop_location %>
    <%= f.input :pickup_location %>
    <%= f.input :status %>
    <%= f.input :error_message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
