<div class="text-center">
  <%= image_tag "/assets/logo.png"  , :size => "200x150"%>
  <br/>
  <br/>
  <br/>
  <h2>כניסה למערכת</h2>
</div>

<div class="row">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: {
              autocomplete: "email",
            } %>
    <%= f.input :password,
            required: false,
            input_html: {
              autocomplete: "current-password",
            } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" , :class => "btn btn-success" %>
  </div>
<% end %>

  </div>
</div>
