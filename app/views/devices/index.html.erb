<% @page_header =  "Devices "%>
<div class="row">
  <div class="col-lg-12">
    <div class='card'>
      <div class='card-header'>
        <div class='card-title'>
          <h6>
            <i class= "fas fa-home"></i>
            <%= "Devices" %>
          </h6>
        </div>
      </div>
      <div class='card-body scrollable'>
        <table class="table table-condensed table-striped datatable">
          <thead>
            <tr>
                              <th><%= "Kind"  %></th>
                              <th><%= "User"  %></th>
                              <th><%= "Name"  %></th>
                              <th><%= "Settings"  %></th>
                              <th><%= "Type"  %></th>
                              <th><%= "Model"  %></th>
                              <th><%= "Driver"  %></th>
                              <th><%= "Last location"  %></th>
                              <th><%= "Last location at"  %></th>
                              <th><%= "Recent message"  %></th>
                              <th><%= "System message"  %></th>
                              <th><%= "Error"  %></th>
                              <th><%= "Avatar"  %></th>
                              <th><%= "Ssid"  %></th>
                            <th class='actions-th' ></th>
            </tr>
          </thead>
          <tbody>
            <% @devices.each do |device| %>
            <tr>
                              <td><%= device.kind %></td>
                              <td><%= device.user_id %></td>
                              <td><%= device.name %></td>
                              <td><%= device.settings %></td>
                              <td><%= device.type %></td>
                              <td><%= device.model %></td>
                              <td><%= device.driver_id %></td>
                              <td><%= device.last_location %></td>
                              <td><%= device.last_location_at %></td>
                              <td><%= device.recent_message %></td>
                              <td><%= device.system_message %></td>
                              <td><%= device.error_id %></td>
                              <td><%= device.avatar %></td>
                              <td><%= device.ssid %></td>
                            <td class="text-end">
                <div class="dropdown">
                  <a href="#" class="text-body" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-bars"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-end" style="">
                    <a href="" class="dropdown-item">
                      <i class="fa-solid fa-pencil"></i>
                      &nbsp; עריכה
                    <a href="#" class="dropdown-item">
                      <i class="fa-solid fa-pencil"></i>
                      &nbsp; מחיקה
                  </div>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


