
<%= simple_form_for(@passenger) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ride_id %>
    <%= f.input :name %>
    <%= f.input :image_url %>
    <%= f.input :rating %>
    <%= f.input :driver_id %>
    <%= f.input :device_id %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
