<h3>חוזים חתומים</h3><hr/>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        Header
      </div>
      <div class="card-body">
        <table class="table table-striped datatable">
            <thead>
              <tr>
                <th>שם המעומד</th>
                <th>שם הקובץ</th>
                <th>תאריך חתימה</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                <% for c in @contracts do %>
              <tr>
                <td><%=link_to c.lead.name, "/home/lead?id=#{c.lead.id}"%></td>
                <td><%= c.name%></td>
                <td><%= c.signed_at.strftime("%Y-%m-%d")%></td>
                <td class="text-end">
                  <div class="dropdown">
                    <a href="#" class="text-body" data-bs-toggle="dropdown" aria-expanded="false">
                      <i class="ph-list"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end" style="">
                      <a
                        href="<%= Rails.application.routes.url_helpers.rails_blob_path(c.pdf, only_path: true) %>"
                        class="dropdown-item"
                        target="BLANK"
                      >
                        <i class="ph-download me-2"></i>
                        הורדת המסמך
                      </a>
                      
                    </div>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
       </div>
    </div>
  </div>
</div>