     crossorigin=""></script>


    <title> Dalore Tracker</title>
    <% if dir == "LTR"%>
      <%= render "/layouts/css" %>
    <% else%>
      <%= render "/layouts/css_he" %>
    <% end %>
    <%= render "/layouts/js" %>
   

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Assistant:wght@200..800&display=swap"
      rel="stylesheet"
    >
  

    <style>
        body , h1, h2, h3, h4, h5, h6,p {
          font-family: "Assistant", sans-serif;
          font-optical-sizing: auto;
          font-weight: normal;
          font-style: normal;
        }

        .border-right{
          border-right:2px solid #F1f1f1
        }
        .text-bold{
          font-weight: bold;
        }

        .scrolabble{
          height: calc(100vh - 130px);
          box-sizing: border-box;
           overflow-y: auto;
          }
        

        .dark{
          background-color: #08090a;
        }
        .light{
          background-color: #FFF;
        }

    </style>

  </head>

  <% if current_user.nil?
    schema = "light"
  else
    schema = current_user.schema
  end %>
  <body data-color-theme="<%= schema %>">
    <%= render "/layouts/mobile_topbar" unless current_user.nil? %>
    <!-- Page content -->
    <div class="page-content">
      <%= yield :sidebar %>
      <!-- Main content -->
      <div class="content-wrapper" dir="<%= dir%>">
        <!-- Inner content -->
        <div class="content-inner scrolabble">
          <%= yield :page_header %>
          <%= render "shared/flash" %>
          <!-- Content area -->
          <div class="content bg-silver ">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>

    <br/><br/><br/><br/><br/>
    <%= yield :footer%>
  </body>

      <script>
      setTimeout(function () {
          window.location.href = "/users/sign_out"
         }, 900000); // Logout after 15 miniutes idle.
    </script>
</html>
