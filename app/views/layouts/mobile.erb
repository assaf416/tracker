<!DOCTYPE html>
<% if current_user.nil? %>
  <% dir = "LTR" %>
<% else%>
  <% if current_user.language == "English" %>
    <% dir = "LTR"%>
  <% else %>
    <% dir = "RTL"%>
    <% end  %>
<% end %>

<html lang="he" dir="<%= dir%>" class="layout-static">
  <head>
    <title><%= "Dalore Tracker" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="application-name" content="ImpactKYC">
  <meta name="apple-mobile-web-app-title" content="ImpactKYC">
